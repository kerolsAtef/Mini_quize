<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MyWallet"
    >
    <com.google.android.gms.ads.AdView
        android:id="@+id/walletAdView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1669182856365767/8980912769">
    </com.google.android.gms.ads.AdView>


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/walletEmail"
    android:textSize="20dp"
    android:textColor="#fff"
    android:padding="10dp"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/walletEmail"
        android:layout_marginTop="20dp"
        android:id="@+id/relative1"
        android:background="#121931"
        android:elevation="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="my wallet"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نقاطك"
            android:textSize="40dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:id="@+id/credits"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000  point(s)"
            android:textSize="30dp"
            android:textColor="#fff"
            android:id="@+id/creditsMoney"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/credits"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:layout_alignParentBottom="true"
        >
        <com.google.android.gms.ads.AdView
            android:id="@+id/walletAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1669182856365767/8980912769">
        </com.google.android.gms.ads.AdView>
        <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/extraPoints"
        android:background="@drawable/circle_btn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
            android:text="+1"
            android:textSize="30dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extraPoints"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="زود فرصك "
            android:textSize="30dp"
            />
    </RelativeLayout>
</RelativeLayout>